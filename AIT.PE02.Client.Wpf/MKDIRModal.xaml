<Window x:Class="AIT.PE02.Client.Wpf.MKDIRModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIT.PE02.Client.Wpf"
        mc:Ignorable="d"
        Title="Add new folder" Height="100" Width="350"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Content="Folder name" Height="28"/>
            <TextBox Name="txtSomeBox" Width="200" Height="28" Padding="5"/>
            <Button Name="btnSaveData" Click="btnSaveData_Click" Content="Save" Height="28" />
        </StackPanel>
    </Grid>
</Window>
